{
  "manifest_version": 3,
  "name": "Intents New Tab",
  "version": "4.0.0",
  "description": "Replace your new tab page with Intents - a minimal, distraction-free search experience with Hold That Thought and Intent Mode for focused reading",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.duckduckgo.com/*",
    "https://duckduckgo.com/*",
    "https://en.wikipedia.org/*",
    "https://export.arxiv.org/*",
    "https://api.stackexchange.com/*",
    "https://api.github.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "intent-mode.js"
      ],
      "css": [
        "thought-popup.css",
        "intent-mode.css"
      ]
    }
  ],
  "commands": {
    "hold-that-thought": {
      "suggested_key": {
        "default": "Alt+T",
        "windows": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Hold That Thought - Save selected text"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}